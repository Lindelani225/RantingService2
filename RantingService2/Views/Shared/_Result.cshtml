

@model RantingService2.Models.Comment


<table class="table" style="width:100%;border:1.5px solid green;">


    <tr>
        <th>
            @Model.Commenter

        </th>
    </tr>
    <tr>
        <td>
            @Model.Commentdate.Day/
            @Model.Commentdate.Month/
            @Model.Commentdate.Year,
            @Model.Commentdate.DayOfWeek;

        </td>

        <td>

            @for (int i = 0; i < @Model.Rating; i++)
            {
                <span class="glyphicon glyphicon-star text-warning"></span>
            }
            @for (int i = @Model.Rating; i < 5; i++)
            {
                <span class="glyphicon glyphicon-star-empty text-warning"></span>
            }
        </td>
    </tr>
    <tr>
        <td>
            @Model.feedbag
        </td>
    </tr>



</table>

